<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"

    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="nickname"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nickname"
            android:text="isi post"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/post"
            android:textSize="12dp"
            android:text="date" />

        <View
            android:id="@+id/lines"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/date"
            android:layout_centerHorizontal="true"
            android:background="#000000" >

        </View>
        <RelativeLayout
            android:id="@+id/action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lines"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like"
                android:layout_marginRight="4dp"
                android:layout_alignParentStart="true"
                tools:text="Like" />
                <LinearLayout android:id="@+id/layout_numLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/num_like"
                    android:layout_toRightOf="@+id/like"
                    android:layout_marginRight="4dp"
                    >
                        <TextView
                            android:id="@+id/num_like"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="2sp"
                            android:layout_marginLeft="2sp"
                            android:layout_marginTop="0.2sp"
                            android:layout_marginBottom="0.2sp"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:text="TextView"
                            tools:text="0" />
                </LinearLayout>

            <TextView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/layout_numDislike"
                android:text="@string/dislike" />

            <LinearLayout android:id="@+id/layout_numDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/num_dislike"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/num_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginLeft="2sp"
                    android:layout_marginTop="0sp"
                    android:layout_marginBottom="0sp"
                    android:text="TextView"
                    android:textColor="#FFF"
                    tools:text="0" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>